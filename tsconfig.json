{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "target": "es2019",
    "lib": ["esnext"],
    "module": "commonjs",
    "sourceMap": true,
    "incremental": true,
    "pretty": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
